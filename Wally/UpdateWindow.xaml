<Window x:Name="UpdateWindow1" x:Class="Wally.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wally"
        mc:Ignorable="d"
        Icon="Res/Wally.ico"
        Title="Updating" Height="89" Width="350" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen"
        Background="#FF252525" Loaded="UpdateWindow1_Loaded" Topmost="True" WindowStyle="ToolWindow">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <ProgressBar x:Name="progressbar1" HorizontalAlignment="Left" Height="15" VerticalAlignment="Top" Width="313"
                     Margin="10,10,0,0" Foreground="#FF00E7FF" Background="#FFC9C9C9" />
        <Label x:Name="label" Content="Powered by Dropbox" HorizontalAlignment="Left" VerticalAlignment="Top"
               Margin="198,25,0,-3" Background="{x:Null}" Foreground="White" />
    </Grid>
</Window>